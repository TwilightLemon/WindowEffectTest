<Window x:Class="WindowEffectTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowEffectTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="255" Width="360" Background="#99000000" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="1"
            GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Grid>
        <CheckBox x:Name="DarkModeCheck" IsChecked="True" Content="DarkMode" HorizontalAlignment="Left" Margin="24,24,0,0" VerticalAlignment="Top" Foreground="White" Click="DarkModeCheck_Click"/>
        <Button Content="打开一个ToolWindow" HorizontalAlignment="Left" Margin="24,54,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
